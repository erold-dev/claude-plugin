{
  "description": "Erold workflow automation hooks - load context, track work, enforce guidelines",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/session-start.sh",
            "timeout": 15
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/check-active-task.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/check-git-commit.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/log-file-change.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "mcp__plugin_erold_erold-pm__complete_task",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/suggest-learning.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Check if there is an active Erold task (from the conversation context). If a task was being worked on but not marked complete, remind the user to either complete it with /erold:task complete <id> or leave it in progress for later. If no task context, allow stopping. Respond with {\"ok\": true} to allow, or {\"ok\": false, \"reason\": \"Task TASK-123 is still in progress. Complete it or leave for later?\"} to prompt.",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
